<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AMOVIA" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/maastricht_blue_500</item>
        <item name="colorPrimaryVariant">@color/maastricht_blue_500</item>
        <item name="colorOnPrimary">@color/grey_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/maastricht_blue_300</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/grey_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/maastricht_blue_500</item>
        <item name="android:textColor">@color/grey_200</item>
        <item name="homeAsUpIndicator">@drawable/ic_back_24</item>
    </style>

    <style name="Theme.AMOVIA.NoActionBar">
        <item name="colorPrimary">@color/maastricht_blue_500</item>
        <item name="colorPrimaryVariant">@color/maastricht_blue_500</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AMOVIA.AppBarOverlay">
        <item name="windowActionBarOverlay">true</item>
        <item name="homeAsUpIndicator">@drawable/btn_back_selector</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_background_selector</item>
    </style>

    <style name="titleStyle">
        <item name="android:textColor">@color/grey_100</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="headStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

</resources>